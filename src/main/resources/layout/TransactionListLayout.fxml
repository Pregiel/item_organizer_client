<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import javafx.collections.FXCollections?>
<TableView fx:id="transactionTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
           xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="item_organizer_client.controller.TransactionListController">
    <columns>
        <TableColumn prefWidth="75.0" text="ID">
            <cellValueFactory>
                <PropertyValueFactory property="id"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" text="Rodzaj transakcji">
            <cellValueFactory>
                <PropertyValueFactory property="type"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" text="Data">
            <cellValueFactory>
                <PropertyValueFactory property="date"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" text="Kwota">
            <cellValueFactory>
                <PropertyValueFactory property="price"/>
            </cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="75.0" text="Akcja">
            <cellValueFactory>
                <PropertyValueFactory property="actionButtons"/>
            </cellValueFactory>
        </TableColumn>
    </columns>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
</TableView>
