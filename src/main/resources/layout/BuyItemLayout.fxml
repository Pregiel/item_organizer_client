<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import tornadofx.control.DateTimePicker?>

<BorderPane maxHeight="1.7976931348623157E308" minWidth="220.0" prefWidth="300.0" stylesheets="@style/MenuViewStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="item_organizer_client.controller.BuyItemController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <BorderPane.margin>
            <Insets left="6.0" right="6.0" />
         </BorderPane.margin>
         <content>
            <VBox fx:id="newItemPane" maxWidth="1.7976931348623157E308" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="8.0" left="14.0" right="14.0" />
         </BorderPane.margin>
         <children>
            <Label alignment="CENTER" styleClass="title-top" text="Dokup produkt">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </Label>
            <VBox spacing="2.0">
               <children>
                  <Label styleClass="property-label" text="Data transakcji" />
                  <DateTimePicker fx:id="dateText" format="dd.MM.yyyy HH:mm" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="40.0" spacing="12.0" BorderPane.alignment="CENTER">
         <children>
            <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#clearAll" prefWidth="100.0" text="Wyczyść" />
            <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#addItem" prefWidth="100.0" text="Dodaj" />
            <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#submit" prefWidth="100.0" text="Zakończ" />
         </children>
         <BorderPane.margin>
            <Insets left="14.0" right="14.0" top="8.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="12.0" top="12.0" />
   </padding>
</BorderPane>
